<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import java.net.URL?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            nodeOrientation="RIGHT_TO_LEFT"
            fx:controller="org.example.store.controller.ExpensesController" prefWidth="1000" prefHeight="700">

    <stylesheets>
        <URL value="@expenses-style.css"/>
    </stylesheets>

    <!-- Top Section -->
    <top>
        <VBox spacing="10" styleClass="header-section">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="النثريات" styleClass="main-title"/>
        </VBox>
    </top>

    <!-- Center Section -->
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <HBox spacing="10" alignment="CENTER_LEFT" GridPane.rowIndex="0" GridPane.columnIndex="0">
                <Label text="عرض:"/>
                <ComboBox fx:id="filterComboBox" promptText="اختر المدة">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="اليوم"/>
                            <String fx:value="آخر 7 أيام"/>
                            <String fx:value="آخر 30 يوم"/>
                            <String fx:value="الكل"/>
                        </FXCollections>
                    </items>
                </ComboBox>
                <Button text="تطبيق" onAction="#applyFilter"/>
            </HBox>
            <!-- Table -->
            <TableView fx:id="expenseTable" prefHeight="400" styleClass="expense-table">
                <columns>
                    <TableColumn fx:id="idColumn" text="رقم النثريه" prefWidth="100"/>
                    <TableColumn fx:id="nameColumn" text="اسم النثريه" prefWidth="200"/>
                    <TableColumn fx:id="amountColumn" text="القيمة" prefWidth="100"/>
                    <TableColumn fx:id="dateColumn" text="التاريخ" prefWidth="150"/>
                </columns>
            </TableView>

            <!-- Form Inputs -->
            <GridPane hgap="15" vgap="10" styleClass="form-grid">
                <padding>
                    <Insets top="10" bottom="10"/>
                </padding>

                <!-- Row 1 -->
                <Label text="اسم النثريه:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" promptText="ادخل الاسم" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="القيمة:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <TextField fx:id="amountField" promptText="ادخل القيمة" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
            </GridPane>
        </VBox>
    </center>

    <!-- Bottom Section -->
    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="addButton" text="إضافة" onAction="#addExpense" styleClass="action-button"/>
                <Button fx:id="updateButton" text="تعديل" onAction="#updateExpense" styleClass="action-button"/>
                <Button fx:id="deleteButton" text="حذف" onAction="#deleteExpense" styleClass="action-button"/>
            </HBox>
            <Label fx:id="totalLabel" text="المجموع: 0.0" styleClass="total-label"/>
        </VBox>
    </bottom>
</BorderPane>
