<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@login-style.css"
            fx:controller="org.example.store.controller.LoginController"
            prefWidth="1000" prefHeight="700"
            nodeOrientation="RIGHT_TO_LEFT">

    <center>
        <VBox alignment="CENTER" spacing="20" maxWidth="480">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Card container -->
            <VBox styleClass="card" alignment="CENTER" spacing="12" maxWidth="360">
                <TextField fx:id="usernameField" promptText="اسم المستخدم" prefWidth="320" styleClass="input"/>
                <PasswordField fx:id="passwordField"
                               promptText="كلمة المرور"
                               prefWidth="320"
                               styleClass="input"
                               onAction="#handleLogin"/>
                <Button fx:id="loginBtn" text="تسجيل الدخول" onAction="#handleLogin" prefWidth="320" styleClass="primary-btn"/>

                <!-- رسالة الخطأ تظهر هنا -->
                <Label fx:id="errorLabel" text="" styleClass="error-label" wrapText="true" maxWidth="320"/>
            </VBox>

        </VBox>
    </center>
</BorderPane>
